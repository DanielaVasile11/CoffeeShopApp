@model CoffeeShopAPI.Models.Product

@{
    ViewData["Title"] = "Editare Produs";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-custom p-4">
                <h2 class="text-center mb-4" style="color: var(--coffee-gold); font-family: 'Times New Roman', serif;">
                    Editare Produs
                </h2>
                <hr style="border-color: var(--coffee-gold);" />

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label" style="color: var(--coffee-cream);">Nume Produs</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Price" class="control-label" style="color: var(--coffee-cream);">Preț (RON)</label>
                        <input asp-for="Price" class="form-control" type="text" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Category" class="control-label" style="color: var(--coffee-cream);">Categorie</label>
                        <select asp-for="Category" class="form-control">
                            <option value="Cafea">Cafea</option>
                            <option value="Ceai">Ceai</option>
                            <option value="Deserturi">Deserturi</option>
                            <option value="Snack-uri">Snack-uri</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Description" class="control-label" style="color: var(--coffee-cream);">Descriere</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="form-group text-center d-grid gap-2">
                        <input type="submit" value="Salvează Modificările" class="btn btn-gold btn-lg" />
                        <a asp-action="Index" class="btn btn-outline-light mt-2">Anulează</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}