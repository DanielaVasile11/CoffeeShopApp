@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<CoffeeShopAPI.Models.Product>

@{
    ViewData["Title"] = "Meniul Nostru";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4" style="color: var(--coffee-gold); font-family: 'Times New Roman', serif;">
            @ViewData["Title"]
        </h1>
        <p class="lead" style="color: var(--coffee-white);">Alege aromele tale preferate</p>
        <hr class="w-25 mx-auto" style="border-color: var(--coffee-gold); opacity: 1;">
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            string imageUrl = "https://images.unsplash.com/photo-1514432324607-a09d9b4aefdd?q=80&w=600";
            if (item.Category == "Cafea") { imageUrl = "https://images.unsplash.com/photo-1497935586351-b67a49e012bf?q=80&w=600"; }
            else if (item.Category == "Ceai") { imageUrl = "https://images.unsplash.com/photo-1594631252845-29fc4cc8cde9?q=80&w=600"; }
            else if (item.Category == "Deserturi") { imageUrl = "https://images.unsplash.com/photo-1578985545062-69928b1d9587?q=80&w=600"; }
            else if (item.Category == "Snack-uri") { imageUrl = "https://images.unsplash.com/photo-1528735602780-2552fd46c7af?q=80&w=600"; }

            <div class="col-md-4 mb-4">
                <div class="card card-custom h-100 shadow-sm">
                    <div style="height: 200px; overflow: hidden;">
                        <img src="@imageUrl" class="card-img-top" alt="@item.Name" style="object-fit: cover; height: 100%; width: 100%;">
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="mb-2">
                            <span class="badge bg-warning text-dark">@item.Category</span>
                        </div>

                        <h4 class="card-title mb-1">@item.Name</h4>
                        <h5 class="mb-3" style="color: var(--coffee-cream);">@item.Price.ToString("0.00") RON</h5>

                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <p class="card-text small text-muted flex-grow-1">@item.Description</p>
                        }
                        else
                        {
                            <p class="card-text small text-muted flex-grow-1">Ingrediente premium, gust autentic.</p>
                        }

                        <div class="d-grid gap-2 mt-3">
                            <div class="row gx-2">
                                <div class="col-4">
                                    <a asp-controller="Favorites" asp-action="Add" asp-route-id="@item.Id" class="btn btn-outline-danger w-100 btn-sm" title="Favorite">
                                        <i class="far fa-heart"></i>
                                    </a>
                                </div>
                                <div class="col-4">
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-light w-100 btn-sm">Detalii</a>
                                </div>
                                <div class="col-4">
                                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-gold w-100 btn-sm" title="Coș">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Admin")
                        {
                            <div class="mt-2 pt-2 border-top border-secondary row gx-2">
                                <div class="col-6">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm w-100">
                                        <i class="fas fa-edit"></i> Editează
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm w-100"
                                       onclick="return confirm('Sigur vrei să ștergi acest produs?');">
                                        <i class="fas fa-trash"></i> Șterge
                                    </a>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        }
    </div>
</div>