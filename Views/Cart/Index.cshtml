@model List<CoffeeShopAPI.Models.Product>

@{
    ViewData["Title"] = "Coșul de Cumpărături";
    // Calculăm totalul real
    decimal total = Model.Sum(p => p.Price);
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="mb-4" style="color: var(--coffee-gold); font-family: 'Times New Roman', serif;">
                <i class="fas fa-shopping-cart me-2"></i> @ViewData["Title"]
            </h2>
            <hr style="border-color: var(--coffee-gold);">
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <div class="display-1 text-muted mb-3"><i class="fas fa-shopping-basket"></i></div>
            <h3 class="text-cream">Coșul tău este momentan gol.</h3>
            <a asp-controller="Products" asp-action="Index" class="btn btn-gold btn-lg mt-3">Înapoi la Meniu</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="table-responsive">
                    <table class="table table-dark table-hover border-gold">
                        <thead>
                            <tr style="color: var(--coffee-gold);">
                                <th>Produs</th>
                                <th>Preț</th>
                                <th>Acțiuni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <span class="text-cream fw-bold">@item.Name</span><br />
                                        <small class="text-muted">@item.Category</small>
                                    </td>
                                    <td class="align-middle text-white">@item.Price.ToString("0.00") RON</td>
                                    <td class="align-middle">
                                        <a asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Șterge
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card card-custom p-4 shadow-sm">
                    <h4 class="card-title mb-4" style="color: var(--coffee-gold);">Sumar Comandă</h4>

                    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom border-secondary">
                        <span class="text-white h5 mb-0">Total:</span>
                        <span class="text-gold h3 mb-0">@total.ToString("0.00") RON</span>
                    </div>

                    <form asp-controller="Cart" asp-action="Checkout" method="post" class="d-grid gap-2">
                        <button type="submit" class="btn btn-gold btn-lg">
                            <i class="fab fa-stripe-s fa-lg me-2"></i> Plătește cu Cardul
                        </button>
                    </form>

                    <div class="text-center mt-2 mb-3">
                        <small class="text-muted" style="font-size: 0.8rem;">
                            <i class="fas fa-lock me-1"></i> Plată securizată prin Stripe
                        </small>
                    </div>

                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-light w-100 py-2">
                        Continuă Cumpărăturile
                    </a>
                </div>
            </div>
        </div>
    }
</div>