@{
    ViewData["Title"] = "Plată Reușită";
}

<div class="container py-5 text-center">
    <div class="card card-custom p-5 d-inline-block shadow-lg" style="max-width: 600px; border-color: #28a745;">

        <div class="mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
        </div>

        <h1 class="display-5 mb-3" style="color: var(--coffee-gold); font-family: 'Times New Roman', serif;">
            Plată Confirmată!
        </h1>

        <p class="lead text-white mb-4">
            Tranzacția Stripe a fost procesată cu succes.
            <br>
            Comanda ta a fost trimisă către barmanii noștri.
        </p>

        <hr style="border-color: var(--coffee-gold);">

        <div class="mt-4">
            <a asp-controller="Cart" asp-action="History" class="btn btn-outline-light me-2">Vezi Istoric</a>
            <a asp-controller="Products" asp-action="Index" class="btn btn-gold">Meniu</a>
        </div>
    </div>
</div>