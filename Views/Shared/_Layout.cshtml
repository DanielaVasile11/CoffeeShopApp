<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffeeShop App</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-custom-dark border-bottom box-shadow mb-0">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-mug-hot me-2"></i>CoffeeShop App
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Acasă</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">Meniu</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categorii
                            </a>
                            <ul class="dropdown-menu bg-custom-dark border-gold" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item text-cream" asp-controller="Products" asp-action="Index" asp-route-category="Cafea">Cafea</a></li>
                                <li><a class="dropdown-item text-cream" asp-controller="Products" asp-action="Index" asp-route-category="Ceai">Ceai</a></li>
                                <li><a class="dropdown-item text-cream" asp-controller="Products" asp-action="Index" asp-route-category="Deserturi">Deserturi</a></li>
                                <li><hr class="dropdown-divider bg-gold"></li>
                                <li><a class="dropdown-item text-cream" asp-controller="Products" asp-action="Index">Toate</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-controller="Products" asp-action="Create">Admin</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center">
                        <form asp-controller="Products" asp-action="Index" method="get" class="d-flex me-3">
                            <input name="SearchString" class="form-control form-control-sm bg-dark text-light border-secondary" type="search" placeholder="Caută..." aria-label="Search">
                            <button class="btn btn-outline-gold btn-sm ms-1" type="submit"><i class="fas fa-search"></i></button>
                        </form>

                        <a class="btn btn-gold position-relative" asp-controller="Cart" asp-action="Index">
                            <i class="fas fa-shopping-cart"></i> Coș
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                0
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div style="min-height: 80vh;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-custom-dark mt-5 py-4">
        <div class="container text-center text-cream">
            &copy; 2024 - CoffeeShop App - <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gold">Confidențialitate</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>