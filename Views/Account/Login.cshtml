@{
    ViewData["Title"] = "Conectare";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card card-custom p-4 shadow-lg">
                <div class="text-center mb-4">
                    <h2 style="color: var(--coffee-gold); font-family: 'Times New Roman', serif;">Autentificare</h2>
                    <p class="text-white">Introduceți datele de acces</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label text-cream">Utilizator</label>
                        <input type="text" name="username" class="form-control" placeholder="Ex: admin sau client" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-cream">Parolă</label>
                        <input type="password" name="password" class="form-control" placeholder="1234" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-gold btn-lg">Conectează-te</button>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <small class="text-muted">
                        Date demo: <b>admin / 1234</b> sau <b>client / 1234</b>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>